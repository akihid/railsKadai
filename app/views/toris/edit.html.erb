<div class="container">
  <header class="header clearfix">
    <%= link_to image_tag('logo.png'), toris_path ,class:"logo_image"%>
  </header>
  
  <h2>つぶやきなおす</h2>
  <div class="tweet-area">
    <%= form_with(model: @post, local: true , url: tori_path , class:"tweet_form") do |form| %>
  
      <%= render partial: "check_error" %>
   
      <div class="post_content">
        <!--<%= form.label :content %>-->
        <%= form.text_field :content , class:"tweet-text"%>
      </div>
      <div class="buttons">
        <div class="button-part">
          <%= form.submit "送信" ,class:"submit_button"%>
        </div>
    <% end %>
  
    <%= form_with(model:@post , local: true , url: toris_path ,method: 'get', class:"tweet_form") do |form| %>
      <%= form.hidden_field :content %>
      <div class="button-part">
        <%= form.submit  "戻る" ,name: 'back' ,class:"back_button"%>
      </div>
      </div>
    <% end %>
  </div>
   
  
  <footer class="footer">
    <p>© 2015-2019 Copyright .</p>
  </footer>
</div>