<h1>一覧画面</h1>

<!--エラー表示-->
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
<!--つぶやく場所-->
<%= form_with(model: @post, local: true , url: confirm_toris_path ) do |form| %>
  <div class="post_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit "つぶやく"%>
<% end %>

<!--一覧表示-->
<article id="post_list">
  <table id="index_table">
    <tr>
      <th>内容</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
      
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to '■' , edit_tori_path(post.id) %></td>
        <td><%= link_to '■' , tori_path(post.id), method: :delete , data:{confirm:'削除しますがよろしいですか'}%> </td>
    <% end %>
  </table>   
</article>
